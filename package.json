{
  "name": "needful",
  "version": "1.5.2",
  "description": "micro library for functional-style javascript programming",
  "repository": {
    "type": "git",
    "url": "https://github.com/machellerogden/needful.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "minify index.src.js -o index.js",
    "pretest": "npm run build",
    "test": "mocha index.spec.js",
    "docs": "jsdoc2md --template README.hbs --files ./index.src.js > README.md",
    "clean-check": "git diff --exit-code 2>/dev/null && git diff --cached --exit-code 2>/dev/null || echo 'Please commit changes before publishing.'",
    "prepare": "npm run test && npm run docs && npm run clean-check"
  },
  "keywords": [
    "functional",
    "library",
    "utility",
    "micro"
  ],
  "author": "Mac Heller-Ogden",
  "license": "MIT",
  "devDependencies": {
    "async-stream-generator": "^1.0.3",
    "babel-minify": "^0.5.0",
    "chai": "^4.1.2",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.2.0",
    "pre-commit": "^1.2.2"
  },
  "engines": {
    "node": ">=10.15.0",
    "npm": ">=6.0.0"
  },
  "precommit": [
    "test"
  ]
}
